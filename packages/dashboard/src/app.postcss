@tailwind base;
@layer base {
	h1 {
		@apply text-2xl;
		@apply font-medium;
	}
	h2 {
		@apply text-xl;
		@apply font-medium;
	}
	h3 {
		@apply text-lg;
		@apply font-medium;
	}
	row {
		@apply flex;
		@apply flex-row;
	}
	column {
		@apply flex;
		@apply flex-col;
	}
	grid {
		@apply grid;
	}
}
@tailwind components;
@tailwind utilities;
