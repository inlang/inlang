{
  "name": "@inlang/database",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "start": "docker compose -p inlang-database --file ./supabase/docker/docker-compose.yml up -d && echo \"waiting for database to initialize the schema...\" && sleep 30 && npx prisma migrate dev && npm run apply-functions && npm run apply-triggers && npm run seed && npm run apply-policies",
    "stop": "docker compose -p inlang-database --file ./supabase/docker/docker-compose.yml down",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "generate-types": "npx openapi-typescript http://localhost:54321/rest/v1/?apikey=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJyb2xlIjoiYW5vbiJ9.ZopqoUt20nEV9cklpv9e3yw3PVyZLmKs5qLD6nGL1SI --output src/types/definitions.ts",
    "seed": "ts-node prisma/seed.ts"
  },
  "devDependencies": {
    "@prisma/client": "^3.2.1",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.10.1",
    "jest": "^27.0.6",
    "jest-esm-transformer": "^1.0.0",
    "openapi-typescript": "^4.3.0",
    "prisma": "^3.2.1",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@inlang/common": "*",
    "@inlang/fluent-syntax": "*",
    "@inlang/adapters": "*",
    "@supabase/supabase-js": "^1.29.2"
  }
}
