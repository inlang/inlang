{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "lib": ["ES2017", "dom"],
        "target": "ES5",
        "module": "ES2020",
        "esModuleInterop": true,
        "sourceMap": false,
        "outDir": "./dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": "src"
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules, test"]
}
